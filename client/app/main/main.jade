div(ng-include='"components/navbar/navbar.html"')

header#banner.hero-unit(ng-controller='MainCtrl')
  .container
    .title
      p.lead PokeDraw Demo
    .players
      p {{numUsers}}
.container



  form.lobby-form(ng-submit='createLobby(lobbyform)' name='lobbyform')
    label(style='center') LOBBY
    p.input-group
      label Name
      input.form-control(type='text' placeholder='Name' ng-model='lobbyName' required)
      input.form-control(type='number' name='lobbyPlayerNum' placeholder='Players(Max 4)' ng-model='lobbyPlayerNum' ng-minlength='1' ng-maxlength='1' required)
      input.form-control(type='text' placeholder='Code' ng-model='code')
      .input-group-btn
        button.btn.btn-primary(type='submit') Create Lobby
      p(ng-show='lobbyform.lobbyPlayerNum.$error && submitted') Invalid Player Number
  .input-group-btn
    button.btn.btn-primary(ng-click='findLobby()') Find Lobby
  

