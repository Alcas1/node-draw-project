.container
	.game-container
		.lobby-title(ng-show='state===0')
			|{{lobby.name}}
		#draw-game(ng-show='state===1')
			#timer
				{{timeLeft}}
			canvas#draw(ng-show='playerStatus===2')
		#colors(ng-show='playerStatus===2')
			#colorBox(ng-repeat="Color in Colors" ng-show='state===1')
				.color(ng-class="{ 'colorActive': $index === selectedIndex }" ng-style="{'background-color':Color.colorHex}" ng-click='switchColor(Color.colorHex,$index)')
		button.ready(ng-click='playerReady()' ng-show='state===0')
			|{{Ready}}
		.player1(ng-show='state===2&&usersInGame.length===1' ng-class='playerActive1')
			#draw-game
				canvas#canvas11.canv
		.player2(ng-show='state===2&&usersInGame.length===2' ng-class='playerActive2')
			#draw-game
				canvas#canvas21.canv
				canvas#canvas22.canv
		.player3(ng-show='state===2&&usersInGame.length===3' ng-class='playerActive3')
			#draw-game
				canvas#canvas31.canv
				canvas#canvas32.canv
				canvas#canvas33.canv


		.messages
			.messages-title
				|Chat
			ul#messages-chat
			form#chat(action="")
				textarea#userMsg(placeholder='Message...')

